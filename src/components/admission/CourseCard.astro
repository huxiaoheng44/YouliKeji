---
import type { Course } from '../../data/courses';

interface Props {
  course: Course;
}

const { course } = Astro.props;
---

<div 
  class="bg-white rounded-lg shadow-lg overflow-hidden transform transition-transform hover:scale-105  "
  data-aos="fade-up"
>
  <div class="p-6 h-full w-full">
    <div class="text-4xl mb-4">{course.icon}</div>
    <h3 class="text-2xl font-bold mb-2">{course.name}</h3>
    <p class="text-primary font-semibold mb-2">适合年级：{course.grades}</p>
    <p class="text-gray-600 mb-4">{course.description}</p>
    
    <div class="mb-6">
      <h4 class="font-semibold mb-2">课程亮点：</h4>
      <ul class="list-disc list-inside text-gray-600">
        {course.highlights.map(highlight => (
          <li>{highlight}</li>
        ))}
      </ul>
    </div>

    <button
      class="w-full bg-primary text-white py-2 rounded-lg hover:bg-primary-dark transition-colors"
      onclick={`showEnrollModal('${course.name}')`}
    >
      立即报名
    </button>
  </div>
</div>
---
import type { Facility } from '../../data/facilities';

interface Props {
  facility: Facility;
}

const { facility } = Astro.props;
---

<div class="bg-white rounded-lg overflow-hidden shadow-lg" data-aos="fade-up">
  <img 
    src={facility.image} 
    alt={facility.title} 
    class="w-full h-64 object-cover"
  />
  <div class="p-6">
    <h3 class="text-2xl font-bold mb-4">{facility.title}</h3>
    <p class="text-gray-600 mb-4">{facility.description}</p>
    {facility.features && (
      <div class="mt-4">
        <h4 class="font-semibold mb-2">主要特点：</h4>
        <ul class="list-disc list-inside space-y-1">
          {facility.features.map(feature => (
            <li class="text-gray-600">{feature}</li>
          ))}
        </ul>
      </div>
    )}
  </div>
</div>
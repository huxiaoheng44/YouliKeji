---
import type { Certificate } from '../../data/achievements';

interface Props {
  certificate: Certificate;
}

const { certificate } = Astro.props;
---

<div class="bg-white rounded-lg overflow-hidden shadow-lg" data-aos="fade-up">
  <img 
    src={certificate.image} 
    alt={`${certificate.studentName}的${certificate.title}`}
    class="w-full h-48 object-cover"
  />
  <div class="p-6">
    <h3 class="text-xl font-bold mb-2">{certificate.title}</h3>
    <div class="text-gray-600 mb-2">获得者：{certificate.studentName}</div>
    <div class="text-gray-600 mb-4">获得时间：{certificate.date}</div>
    <p class="text-gray-700">{certificate.description}</p>
  </div>
</div>
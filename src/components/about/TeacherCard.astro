---
import type { Teacher } from '../../data/teachers';

interface Props {
  teacher: Teacher;
}

const { teacher } = Astro.props;
---

<div class="bg-white rounded-lg overflow-hidden shadow-lg" data-aos="fade-up">
  <div class="aspect-w-3 aspect-h-4">
    <img 
      src={teacher.image} 
      alt={teacher.name}
      class="w-full h-full object-cover"
    />
  </div>
  <div class="p-6 text-center">
    <h3 class="text-2xl font-bold mb-2">{teacher.name}</h3>
    <p class="text-gray-600 mb-4">{teacher.title}</p>
    <p class="text-gray-700">{teacher.description}</p>
  </div>
</div>